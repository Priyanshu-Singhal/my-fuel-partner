<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".CustomerMapsActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true" />
        <RelativeLayout
            android:id="@+id/rel1"
            android:layout_above="@+id/customer_call_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/round_button"
            android:visibility="gone">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image_driver"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/profile"



                android:padding="3dp"

                />

            <TextView
                android:id="@+id/name_driver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/profile_image_driver"
                android:text="Driver Name"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="15dp"
                />

            <TextView
                android:id="@+id/phone_driver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/profile_image_driver"
                android:text="Driver Phone Number"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="14dp"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/name_driver"
                android:layout_marginLeft="15dp"

                />

            <TextView
                android:id="@+id/car_name_driver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/profile_image_driver"
                android:text="Driver Car Name"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="14dp"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/phone_driver"
                android:layout_marginLeft="15dp"

                />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/phone"

                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/customer_orders_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_button"
            android:text="ORDER"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/customer_logout_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@drawable/round_button"
            android:text="LOGOUT"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </LinearLayout>

    <Button
        android:id="@+id/customer_call_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
      android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="30dp"
        android:layout_weight="1"

        android:background="@drawable/round_button"
        android:text="CALL FUEL TANK"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />
</RelativeLayout>
</RelativeLayout>
